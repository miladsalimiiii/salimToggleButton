<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SalimToggleButton">
        <attr name="rootBackground" format="reference" />
        <attr name="unSelectedTextColor" format="color" />
        <attr name="selectedTextColor" format="color" />
        <attr name="buttonBackground" format="reference"/>
        <attr name="paddingButton" format="dimension" />
        <attr name="marginButton" format="dimension"/>
        <attr name="numberOfButton" format="enum">
            <enum name="TWO" value="2"/>
            <enum name="THREE" value="3" />
        </attr>
        <attr name="selectedButton" format="enum">
            <enum name="ONE" value="1"/>
            <enum name="TWO" value="2"/>
            <enum name="THREE" value="3" />
        </attr>
        <attr name="selectType" format="enum">
            <enum name="HIGHLIGHT" value="1"/>
            <enum name="INDICATOR" value="2"/>
        </attr>

        <attr name="firstTextOfButton" format="string" />
        <attr name="secondTextOfButton" format="string" />
        <attr name="thirdTextOfButton" format="string" />
        <attr name="underLineWidth" format="dimension"/>
        <attr name="underLineColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="UnderlinedTextView" >
        <attr name="underlineHeight" format="dimension" />
        <attr name="underlineOffset" format="dimension" />
        <attr name="underlineColor" format="color" />
        <attr name="underLinePosition" format="enum">
            <enum name="baseline" value="0" />
            <enum name="below" value="1" />
        </attr>
        <attr name="selectedType" format="enum">
            <enum name="HIGHLIGHT" value="1"/>
            <enum name="INDICATOR" value="2"/>
        </attr>
    </declare-styleable>

</resources>